<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.chalcodes.weaponm</groupId>
	<artifactId>WeaponM</artifactId>
	<version>2.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Weapon M</name>
	<description>A Java client for TradeWars 2002</description>
	<url>http://http://chalcodes.com/wiki/index.php?title=Weapon_M</url>
	<licenses>
		<license>
			<name>Modified BSD License</name>
			<url>http://opensource.org/licenses/BSD-3-Clause</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<properties>
	    <javaVersion>1.7</javaVersion>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<modules>
		<module>weapon</module>
		<!--
		<module>scripts</module>
		<module>assembly</module>
		-->
	</modules>
	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
		    <id>chalcodes</id>
			<url>http://chalcodes.com/maven</url>
		</repository>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<id>clapper-org-maven-repo</id>
			<name>org.clapper Maven Repo</name>
			<url>http://maven.clapper.org/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<dependencyManagement>
	    <dependencies>
		    <dependency> <!-- chalcodes -->
				<groupId>com.chalcodes.automaton</groupId>
				<artifactId>Automaton</artifactId>
				<version>1.12.1</version>
			</dependency>
			<dependency> <!-- chalcodes -->
				<groupId>com.chalcodes.jtx</groupId>
				<artifactId>JTX</artifactId>
				<version>1.2</version>
			</dependency>
			<dependency> <!-- central -->
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>1.7.2</version>
			</dependency>
			<dependency> <!-- central -->
				<groupId>ch.qos.logback</groupId>
				<artifactId>logback-classic</artifactId>
				<version>1.0.9</version>
			</dependency>
			<dependency> <!-- central -->
				<groupId>asm</groupId>
				<artifactId>asm-commons</artifactId>
				<version>3.3.1</version>
			</dependency>
			<dependency> <!-- clapper-org-maven-repo -->
				<groupId>org.clapper</groupId>
				<artifactId>javautil</artifactId>
				<version>3.1.1</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>org.pf.joi</groupId>
				<artifactId>pf-joi-full</artifactId>
				<version>3.0</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>com.github.kjkrum</groupId>
				<artifactId>Prefuse</artifactId>
				<version>20130119</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>com.github.kjkrum</groupId>
				<artifactId>OrangeExtensions</artifactId>
				<version>1.4.0</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>org.dockingframes</groupId>
				<artifactId>docking-frames-base</artifactId>
				<version>1.1.2-SNAPSHOT</version>
				<type>pom</type>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>org.dockingframes</groupId>
				<artifactId>docking-frames-core</artifactId>
				<version>1.1.2-SNAPSHOT</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>org.dockingframes</groupId>
				<artifactId>docking-frames-common</artifactId>
				<version>1.1.2-SNAPSHOT</version>
			</dependency>
			<dependency>  <!-- chalcodes -->
				<groupId>org.dockingframes</groupId>
				<artifactId>docking-frames-ext-glass</artifactId>
				<version>1.1.2-SNAPSHOT</version>
			</dependency>
	    </dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.0</version>
				</plugin>
				<plugin>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.2.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-javadoc-plugin</artifactId>
					<version>2.9</version>
				</plugin>
				<plugin>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.2.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>2.4</version>
			</extension>
		</extensions>
	</build>
	<distributionManagement>
		<repository>
			<id>chalcodes</id>
			<url>${chalcodes.url}</url>
		</repository>
	</distributionManagement>
</project>